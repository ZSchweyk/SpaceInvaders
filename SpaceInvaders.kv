#:kivy 1.0.9

<Ball>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Paddle>:
    size: 200, 25
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<Alien>:
    Image:
        source: root.image_path
        center_x: self.parent.center_x * self.parent.parent.width
        center_y: self.parent.center_y * self.parent.parent.height
        size: self.texture_size[0] * self.parent.size[0], self.texture_size[1] * self.parent.size[1]
        allow_stretch: False


<Game>:
    ball: ball
    paddle: paddle
    aliens: aliens

    FloatLayout:
        width: root.width
        height: root.height
        id: aliens

    Alien:
        size: self.alien_size
        center_x: .1
        center_y: .8
    Alien:
        size: self.alien_size
        center_x: .2
        center_y: .8
    Alien:
        size: self.alien_size
        center_x: .3
        center_y: .8
    Alien:
        size: self.alien_size
        center_x: .4
        center_y: .8
    Alien:
        size: self.alien_size
        center_x: .5
        center_y: .8
    Alien:
        size: self.alien_size
        center_x: .6
        center_y: .8
    Alien:
        size: self.alien_size
        center_x: .7
        center_y: .8
    Alien:
        size: self.alien_size
        center_x: .8
        center_y: .8
    Alien:
        size: self.alien_size
        center_x: .9
        center_y: .8

    Ball:
        id: ball
        center: root.center

    Paddle:
        id: paddle
        center_x: root.center_x
        center_y: root.x

