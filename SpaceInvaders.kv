#:kivy 1.0.9

<Ball>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Paddle>:
    size: 200, 25
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<Alien>:
    Image:
        source: root.image_path
        pos: self.parent.x * self.parent.parent.width, self.parent.y * self.parent.parent.height
        size: self.texture_size[0] * .5, self.texture_size[1] * .5
        allow_stretch: False




<Game>:
    ball: ball
    paddle: paddle

    Alien:
        id: alien
        pos: .5, .8

    Ball:
        id: ball
        center: root.center

    Paddle:
        id: paddle
        center_x: root.center_x
        center_y: root.x

