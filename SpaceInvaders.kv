#:kivy 1.0.9

<Ball>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Paddle>:
    size: 200, 25
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<Alien>:
    Image:
        source: "SpaceInvader.png"
        pos: 300, 100
        size: self.texture_size[0] * .5, self.texture_size[1] * .5
        allow_stretch: False



<Game>:
    ball: ball
    paddle: paddle

    Ball:
        id: ball
        center: root.center

    Paddle:
        id: paddle
        center_x: root.center_x
        center_y: root.x

