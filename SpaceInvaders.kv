#:kivy 1.0.9

<Ball>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Paddle>:
    size: 200, 25
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<Alien>:
    Image:
        source: root.image_path
        center_x: self.parent.center_x * self.parent.width
        center_y: self.parent.center_y * self.parent.height
        size: self.texture_size[0] * .5, self.texture_size[1] * .5
        allow_stretch: False




<Game>:
    ball: ball
    paddle: paddle
    aliens: aliens

    FloatLayout:
        width: root.width
        height: root.height
        id: aliens

    Ball:
        id: ball
        center: root.center

    Paddle:
        id: paddle
        center_x: root.center_x
        center_y: root.x

